<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/category_column_bg"
    android:orientation="vertical"
    tools:context=".TyreEditFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/search_tab_bg">

        <Button
            android:id="@+id/backButton"
            app:cornerRadius="5dp"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:backgroundTint="@color/search_button_bg_tint"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:singleLine="true"
            android:text="Back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Part"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/partText"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/column_bg"
            android:ems="10"
            android:gravity="start"
            android:inputType="text"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:selectAllOnFocus="false"
            android:textAlignment="viewStart"
            android:textIsSelectable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Supplier Part Code"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/supplierPartCodeText"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/column_bg"
            android:ems="10"
            android:gravity="start"
            android:inputType="text"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:selectAllOnFocus="false"
            android:textAlignment="viewStart"
            android:textIsSelectable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Description"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/descriptionText"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/column_bg"
            android:ems="10"
            android:gravity="start"
            android:inputType="text"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:selectAllOnFocus="false"
            android:textAlignment="viewStart"
            android:textIsSelectable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Location"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/locationText"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/column_bg"
            android:ems="10"
            android:gravity="start"
            android:inputType="text"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:selectAllOnFocus="false"
            android:textAlignment="viewStart"
            android:textIsSelectable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Seen"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/seenText"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/column_bg"
            android:ems="10"
            android:gravity="start"
            android:inputType="text"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:selectAllOnFocus="false"
            android:textAlignment="viewStart"
            android:textIsSelectable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Last Sold Date"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lastSoldDateText"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/column_bg"
            android:ems="10"
            android:gravity="start"
            android:inputType="text"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:selectAllOnFocus="false"
            android:textAlignment="viewStart"
            android:textIsSelectable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Comment"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/commentText"
            android:layout_width="380dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/column_bg"
            android:ems="10"
            android:gravity="start"
            android:inputType="text"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:selectAllOnFocus="false"
            android:textAlignment="viewStart"
            android:textIsSelectable="false" />
    </LinearLayout>

</LinearLayout>