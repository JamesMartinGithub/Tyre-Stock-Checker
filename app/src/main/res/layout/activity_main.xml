<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/category_column_bg">

    <LinearLayout
        android:id="@+id/savedVersionPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:translationY="-30dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A saved version is available"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:text="(21:25  10/10/2010)"
            android:textAlignment="center"
            android:textSize="21sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveIgnoreButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@color/search_button_bg_tint"
                android:text="Ignore"
                android:visibility="visible" />

            <Button
                android:id="@+id/saveLoadButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:backgroundTint="@color/search_button_bg_tint"
                android:text="Load"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/fileButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/search_button_bg_tint"
        android:text="@string/file_selector"
        android:visibility="visible" />

    <TextView
        android:id="@+id/errorTextView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/char_deleted"
        android:textSize="20sp"
        android:translationY="100dp" />

</FrameLayout>