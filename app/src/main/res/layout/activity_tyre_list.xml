<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".TyreListActivity">

    <LinearLayout
        android:id="@+id/rootLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@color/search_tab_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/widthText"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:allowUndo="false"
                    android:background="@color/search_text_entry_bg"
                    android:ems="10"
                    android:hint="width"
                    android:imeActionId="0"
                    android:inputType="number"
                    android:isScrollContainer="false"
                    android:linksClickable="false"
                    android:maxLength="3"
                    android:nestedScrollingEnabled="false"
                    android:scrollbarAlwaysDrawHorizontalTrack="false"
                    android:scrollbarAlwaysDrawVerticalTrack="false"
                    android:scrollbars="none"
                    android:scrollHorizontally="false"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/aspectRatioText"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:allowUndo="false"
                    android:background="@color/search_text_entry_bg"
                    android:ems="10"
                    android:hint="ratio"
                    android:imeActionId="1"
                    android:inputType="number"
                    android:isScrollContainer="false"
                    android:linksClickable="false"
                    android:maxLength="2"
                    android:nestedScrollingEnabled="false"
                    android:scrollbarAlwaysDrawHorizontalTrack="false"
                    android:scrollbarAlwaysDrawVerticalTrack="false"
                    android:scrollbars="none"
                    android:scrollHorizontally="false"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/rimDiameterText"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:allowUndo="false"
                    android:background="@color/search_text_entry_bg"
                    android:ems="10"
                    android:hint="rim"
                    android:imeActionId="2"
                    android:inputType="number"
                    android:isScrollContainer="false"
                    android:linksClickable="false"
                    android:maxLength="2"
                    android:nestedScrollingEnabled="false"
                    android:scrollbarAlwaysDrawHorizontalTrack="false"
                    android:scrollbarAlwaysDrawVerticalTrack="false"
                    android:scrollbars="none"
                    android:scrollHorizontally="false"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textIsSelectable="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/searchText"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:allowUndo="false"
                    android:background="@color/search_text_entry_bg"
                    android:ems="10"
                    android:imeActionId="3"
                    android:inputType="text"
                    android:isScrollContainer="false"
                    android:linksClickable="false"
                    android:maxLength="50"
                    android:nestedScrollingEnabled="false"
                    android:scrollbarAlwaysDrawHorizontalTrack="false"
                    android:scrollbarAlwaysDrawVerticalTrack="false"
                    android:scrollbars="none"
                    android:scrollHorizontally="false"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textIsSelectable="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/optionsButton"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/search_button_bg_tint"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:singleLine="true"
                    app:cornerRadius="5dp"
                    app:icon="@drawable/settings_icon"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/white" />

                <Button
                    android:id="@+id/newButton"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/search_button_bg_tint"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:singleLine="true"
                    app:cornerRadius="5dp"
                    app:icon="@drawable/add_tyre_icon"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/white" />

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/search_button_bg_tint"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:singleLine="true"
                    android:text="Search"
                    app:cornerRadius="5dp" />

                <Button
                    android:id="@+id/clearButton"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/search_button_bg_tint"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:singleLine="true"
                    android:text="Clear"
                    app:cornerRadius="5dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/optionsBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/search_tab_bg"
            android:orientation="horizontal">

            <Button
                android:id="@+id/printButton"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_margin="6dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/search_button_bg_tint"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                app:cornerRadius="5dp"
                app:icon="@drawable/print_icon"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/unstockedButton"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_margin="6dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/search_button_bg_tint"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:singleLine="true"
                android:text="Show All"
                app:cornerRadius="5dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/white" />
        </LinearLayout>

        <com.example.stockcheck.ScrollViewNotifying
            android:id="@+id/verticalScroll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fadeScrollbars="true"
            android:scrollbars="vertical">

            <HorizontalScrollView
                android:id="@+id/horizontalScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="true">

                <TableLayout
                    android:id="@+id/tyreTable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fadeScrollbars="true"
                    android:paddingRight="8dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbars="horizontal|vertical">

                    <TableRow
                        android:id="@+id/categoryRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:context=".TyreFragment">

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="8dp"
                                android:background="@color/table_bg"
                                android:orientation="horizontal">

                                <TableRow
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp">

                                    <TextView
                                        android:id="@+id/partText"
                                        android:layout_width="130dp"
                                        android:layout_height="30dp"
                                        android:background="@color/category_column_bg"
                                        android:gravity="center"
                                        android:paddingLeft="2sp"
                                        android:singleLine="true"
                                        android:text="Part▲"
                                        android:textAlignment="textStart"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/partHandle"
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="clip_horizontal"
                                        android:layout_marginRight="1dp"
                                        android:backgroundTint="@color/category_column_bg"
                                        android:gravity="center"
                                        android:insetTop="0dp"
                                        android:insetBottom="0dp"
                                        android:minWidth="0dp"
                                        android:minHeight="0dp"
                                        android:stateListAnimator="@null"
                                        android:textAlignment="textStart"
                                        android:textSize="17sp"
                                        app:cornerRadius="0sp"
                                        app:iconPadding="0dp"
                                        app:shapeAppearance="@null" />

                                    <TextView
                                        android:id="@+id/supplierPartCodeText"
                                        android:layout_width="120dp"
                                        android:layout_height="30dp"
                                        android:background="@color/category_column_bg"
                                        android:gravity="center"
                                        android:paddingLeft="2sp"
                                        android:singleLine="true"
                                        android:text="Supplier Part Code"
                                        android:textAlignment="textStart"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/supplierPartCodeHandle"
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="clip_horizontal"
                                        android:layout_marginRight="1dp"
                                        android:backgroundTint="@color/category_column_bg"
                                        android:gravity="center"
                                        android:insetTop="0dp"
                                        android:insetBottom="0dp"
                                        android:minWidth="0dp"
                                        android:minHeight="0dp"
                                        android:stateListAnimator="@null"
                                        android:textAlignment="textStart"
                                        android:textSize="17sp"
                                        app:cornerRadius="0sp"
                                        app:iconPadding="0dp"
                                        app:shapeAppearance="@null" />

                                    <TextView
                                        android:id="@+id/descriptionText"
                                        android:layout_width="240dp"
                                        android:layout_height="30dp"
                                        android:background="@color/category_column_bg"
                                        android:gravity="center"
                                        android:paddingLeft="2sp"
                                        android:singleLine="true"
                                        android:text="Description"
                                        android:textAlignment="textStart"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/descriptionHandle"
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="clip_horizontal"
                                        android:layout_marginRight="1dp"
                                        android:backgroundTint="@color/category_column_bg"
                                        android:gravity="center"
                                        android:insetTop="0dp"
                                        android:insetBottom="0dp"
                                        android:minWidth="0dp"
                                        android:minHeight="0dp"
                                        android:stateListAnimator="@null"
                                        android:textAlignment="textStart"
                                        android:textSize="17sp"
                                        app:cornerRadius="0sp"
                                        app:iconPadding="0dp"
                                        app:shapeAppearance="@null" />

                                    <TextView
                                        android:id="@+id/locationText"
                                        android:layout_width="100dp"
                                        android:layout_height="30dp"
                                        android:background="@color/category_column_bg"
                                        android:gravity="center"
                                        android:paddingLeft="2sp"
                                        android:singleLine="true"
                                        android:text="Location"
                                        android:textAlignment="textStart"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/locationHandle"
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="clip_horizontal"
                                        android:layout_marginRight="1dp"
                                        android:backgroundTint="@color/category_column_bg"
                                        android:gravity="center"
                                        android:insetTop="0dp"
                                        android:insetBottom="0dp"
                                        android:minWidth="0dp"
                                        android:minHeight="0dp"
                                        android:stateListAnimator="@null"
                                        android:textAlignment="textStart"
                                        android:textSize="17sp"
                                        app:cornerRadius="0sp"
                                        app:iconPadding="0dp"
                                        app:shapeAppearance="@null" />

                                    <TextView
                                        android:id="@+id/stockText"
                                        android:layout_width="60dp"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="1dp"
                                        android:background="@color/category_column_bg"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:text="Stock"
                                        android:textAlignment="center"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/seenText"
                                        android:layout_width="65dp"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="1dp"
                                        android:background="@color/category_column_bg"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:text="Seen"
                                        android:textAlignment="center"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/lastSoldDateText"
                                        android:layout_width="90dp"
                                        android:layout_height="30dp"
                                        android:background="@color/category_column_bg"
                                        android:gravity="center"
                                        android:paddingLeft="2sp"
                                        android:singleLine="true"
                                        android:text="Last Sold"
                                        android:textAlignment="textStart"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                </TableRow>

                            </TableLayout>
                        </FrameLayout>
                    </TableRow>

                </TableLayout>
            </HorizontalScrollView>
        </com.example.stockcheck.ScrollViewNotifying>

        <LinearLayout
            android:id="@+id/selectBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/search_tab_bg"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/editButton"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="@color/search_button_bg_tint"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:singleLine="true"
                    android:text="Edit"
                    android:textColor="@color/white"
                    app:cornerRadius="5dp"
                    app:iconTint="@color/white" />

                <Button
                    android:id="@+id/markDoneButton"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/search_button_bg_tint"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:singleLine="true"
                    android:text="Mark Done"
                    app:cornerRadius="5dp" />

                <Button
                    android:id="@+id/minusButton"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/search_button_bg_tint"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:singleLine="true"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    app:icon="@drawable/baseline_remove_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/white" />

                <TextView
                    android:id="@+id/seenValueText"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/category_column_bg"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/addButton"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="@color/search_button_bg_tint"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:singleLine="true"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    app:icon="@drawable/outline_add_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>